<%= link_to shop_product_path(product.shop, product), class: "text-dark" do %>
  <div class="product-card">
    <% if product.photos.attached? %>
      <%= cl_image_tag product.photos.first.key %>
    <% else %>
      <img src="https://cdn.shopify.com/s/files/1/0533/2089/files/placeholder-images-image_large.png?format=jpg&quality=90&v=1530129081" alt="">
    <% end %>
    <div class="product-card-infos">
      <div>
        <h2><%= product.name %></h2>
        <p><%= product.description %></p>
      </div>
      <h2 class="product-card-pricing"><%= product.price %>â‚¬ <%= link_to icon('fas', 'cart-plus'), add_to_cart_path(product), method: :post %></h2>
    </div>
  </div>
<% end %>
